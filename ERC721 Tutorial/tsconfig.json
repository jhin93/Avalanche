
// ts관련 문제 생길때, CMD + SHIFT + P 입력 후 타입스크립트 서버 재시작 
{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "strict": true,
        "moduleResolution": "node",
        "noImplicitThis": true,
        "noImplicitAny": false,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es2015"
        ],
        "sourceMap": true,
        "types": [
            "node",
            "truffle-typings"
        ]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}